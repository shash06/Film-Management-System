@using Phase3.Models;

@model Film

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Modify Film</title>
</head>
<body style="background-color:lightskyblue">
    <div style="background-color:royalblue">
        <br /><h1>&nbsp;Film Management System</h1>
        <br />
    </div>

    <div>
        <br />&nbsp;
        @Html.ActionLink("Back to Film List", "FilmList")
    </div>

    <form method="post">
        <div>
            <br />
            <table border="0" align="center" cellspacing="10" cellpadding="5">
                <tr>
                    <td>Title</td>
                    <td>@Html.DisplayFor(model => model.Title)</td>
                </tr>

                <tr>
                    <td>Description *</td>
                    <td>@Html.EditorFor(model => model.Description)</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Release Year *</td>
                    <td>@Html.EditorFor(model => model.Release_Year)</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Release_Year, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Cast *</td>
                    <td>@Html.EditorFor(model => model.Actors)</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Actors, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Genre *</td>
                    @*<td>@Html.DropDownList("getCategories", null, htmlAttributes: new { @class = "control" }) </td >*@
                    @*<td>@Html.DropDownList("Category", null, htmlAttributes: new { @class = "control" }) </td>*@
                    <td>@Html.EditorFor(model => model.Category)</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td> Language *</td>
                    @*<td>@Html.DropDownList("Language", null, htmlAttributes: new { @class = "control" }) </td>*@
                    <td>@Html.EditorFor(model => model.Language)</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Language, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Rating</td>
                    <td>@Html.EditorFor(model => model.Rating)  / 10</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Runtime</td>
                    <td>@Html.EditorFor(model => model.Length) minutes</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Length, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Rental Duration</td>
                    <td>@Html.EditorFor(model => model.Rental_Duration) days</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Rental_Duration, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Rental Rate</td>
                    <td>@Html.EditorFor(model => model.Rental_Rate) Rs</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Rental_Rate, "", new { @class = "text-danger" })</td>
                </tr>

                <tr>
                    <td>Replacement Cost</td>
                    <td>@Html.EditorFor(model => model.Replacement_Cost) Rs</td>
                    <td style="color:red">@Html.ValidationMessageFor(model => model.Replacement_Cost, "", new { @class = "text-danger" })</td>
                </tr>
            </table>
        </div>
        <div align="center">
            <br />
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</body>
</html>
