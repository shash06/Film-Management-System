<Window x:Class="FMS_PLL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMS_PLL"
        mc:Ignorable="d"
        Title="MainWindow" Height="590" Width="800" WindowState="Maximized">
    <Grid>
        <DataGrid Name="dgFilmList" IsReadOnly="True"  Margin="10,100,10,100"/>
        <Button Name="btnCreate" Content="Create" HorizontalAlignment="Left" Margin="130,0,0,22.8" VerticalAlignment="Bottom" Width="155" Height="40" Click="btnCreate_Click"/>
        <Button Name="btnSearch" Content="Search" HorizontalAlignment="Right" Margin="0,0,139.6,22.8" VerticalAlignment="Bottom" Width="155" Height="40" Click="btnSearch_Click"/>

        <Label Content="Film Management System" Margin="155,20,155,0" VerticalAlignment="Top" Height="58" Width="480" FontSize="42" FontWeight="DemiBold" FontFamily="Times New Roman" HorizontalAlignment="Center"/>

    </Grid>
</Window>
